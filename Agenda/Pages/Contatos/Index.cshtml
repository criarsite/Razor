@page
@model Agenda.Pages.Contatos.Index
@{
    ViewData["Title"] =  "Contatos";
}

<div class="container">
    <div class="row mb-3">
        <div class="col-9">
            <h2 class="text-info">Lista de Contatos</h2>
        </div>

        <div class="col-3">
            <a asp-page="../Contatos/Criar" class="col-12 btn btn-primary">
                Criar novo contato
            </a>
        </div>
    </div>

    @if (Model.Contatos.Count() > 0) {
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(c => c.Contatos.FirstOrDefault().Id)</th>
                    <th>@Html.DisplayNameFor(c => c.Contatos.FirstOrDefault().Nome)</th>
                    <th>@Html.DisplayNameFor(c => c.Contatos.FirstOrDefault().Email)</th>
                    <th>@Html.DisplayNameFor(c => c.Contatos.FirstOrDefault().Telefone)</th>
                    <th>@Html.DisplayNameFor(c => c.Contatos.FirstOrDefault().DataCadastro)</th>
                    <th>@Html.DisplayNameFor(c => c.Contatos.FirstOrDefault().Categoria)</th>
                    <th>Ações</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var contato in Model.Contatos) {
                    <tr class="table-light">
                        <td>@Html.DisplayFor(c => contato.Id)</td>
                        <td>@Html.DisplayFor(c => contato.Nome)</td>
                        <td>@Html.DisplayFor(c => contato.Email)</td>
                        <td>@Html.DisplayFor(c => contato.Telefone)</td>
                        <td>@Html.DisplayFor(c => contato.DataCadastro)</td>
                        <td>@Html.DisplayFor(c => contato.Categoria.Nome)</td>
                        <td>
                            <a class="col-3 btn btn-success" asp-page="../Contatos/Detalhes" asp-route-id="@contato.Id">
                                Detalhes
                            </a>
                            <a class="col-3 offset-1 btn btn-warning" asp-page="../Contatos/Editar" asp-route-id="@contato.Id">
                                Editar
                            </a>
                            <a class="col-3 offset-1 btn btn-danger" asp-page="../Contatos/Excluir" asp-route-id="@contato.Id">
                                Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    } else {
        <h3 class="text-warning text-center">Sua Lista de Contatos Esta Vazia</h3>
    }
</div>