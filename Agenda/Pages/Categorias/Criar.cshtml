@page
@model Agenda.Pages.Categorias.Criar
@{
    ViewData["Title"] = "Criar";
}

<div class="container">
    <div class="row mb-3">
        <div class="col-8 offset-2">
            <h2 class="text-info">
                Criar uma nova categoria
            </h2>

            <form method="post" class="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Categoria.Nome" class="form-label"></label>
                    <input asp-for="Categoria.Nome" class="form-control" placeholder="Escolha um nome..."/>
                    <span asp-validation-for="Categoria.Nome" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Categoria.DataCadastro" class="form-label"></label>
                    <input asp-for="Categoria.DataCadastro" class="form-control"/>
                    <span asp-validation-for="Categoria.DataCadastro" class="text-danger"></span>                 </div>

                <button type="submit" class="text-center btn btn-primary col-12">Cadastrar</button>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <a asp-page="Index" class="btn btn-secondary">Voltar</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}